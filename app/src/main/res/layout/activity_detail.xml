<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/thumbnail_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_margin="15dp"
        android:src="@color/contact_name"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_menu_detail"
        android:padding="20dp"
        android:scrollbars="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama PT :"
            />
        <TextView
            android:id="@+id/name_detail"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/color1light"
            android:textSize="20sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Izin :"
            />
        <TextView
            android:id="@+id/phone_detail"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color1light"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode POS :"
            />
        <TextView
            android:id="@+id/status_detail"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color1light"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masa Berlaku :"
            />
        <TextView
            android:id="@+id/link_gmaps_detail"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            />

        <Button
            android:id="@+id/gmaps_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Google Maps"
            android:textColor="@color/color1light"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:background="@drawable/round_button"
            />


    </LinearLayout>

</LinearLayout>